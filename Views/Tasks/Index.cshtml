@model IEnumerable<ToDoList.Models.Task>
@{
    ViewData["Title"] = "Tasks";
}
<h1 data-i18n="MyTasks">My Tasks</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" data-i18n-feedback="@TempData["SuccessMessage"]">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" data-i18n-feedback="@TempData["ErrorMessage"]">@TempData["ErrorMessage"]</div>
}
<script>
// Feedback i18n
document.addEventListener('DOMContentLoaded', function () {
    var lang = localStorage.getItem('lang') || 'en';
    fetch('/i18n.json').then(resp => resp.json()).then(dict => {
        document.querySelectorAll('[data-i18n-feedback]').forEach(function(el) {
            var key = el.getAttribute('data-i18n-feedback');
            if (dict[lang][key]) el.innerText = dict[lang][key];
        });
    });
});
</script>
<p>
    <a class="btn btn-primary" asp-action="Create" data-i18n="NewTask">New Task</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center" data-i18n="Title">Title</th>
            <th class="text-center" data-i18n="Description">Description</th>
            <th class="text-center" data-i18n="Completed">Completed?</th>
            <th class="text-center" data-i18n="CreatedAt">Created at</th>
            <th class="text-center" data-i18n="UpdatedAt">Updated at</th>
            <th class="text-center" data-i18n="CompletedAt">Completed at</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center align-middle">@item.Title</td>
            <td class="text-center align-middle">@item.Description</td>
            <td class="text-center align-middle">
                <input type="checkbox" class="toggle-complete" data-id="@item.Id" @(item.IsCompleted ? "checked" : "") style="transform: scale(1.3); cursor:pointer;" />
            </td>
            <td class="text-center align-middle">
                @item.CreatedAt.AddHours(-3).ToString("dd/MM/yyyy HH:mm:ss")
            </td>
            <td class="text-center align-middle">
                @(item.UpdatedAt > DateTime.MinValue ? item.UpdatedAt.AddHours(-3).ToString("dd/MM/yyyy HH:mm:ss") : "-")
            </td>
            <td class="text-center align-middle">
                @(item.CompletedAt.HasValue ? item.CompletedAt.Value.AddHours(-3).ToString("dd/MM/yyyy HH:mm:ss") : "-")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" data-i18n="Edit">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" data-i18n="Delete">Delete</a>
            </td>
        </tr>
    }

    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $('.toggle-complete').change(function () {
            var checkbox = $(this);
            var id = checkbox.data('id');
            checkbox.prop('disabled', true);
            $.ajax({
                url: '/Tasks/ToggleComplete/' + id,
                type: 'POST',
                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                success: function (data) {
                    checkbox.prop('checked', data.isCompleted);
                    // Atualiza a célula da data de atualização e conclusão na mesma linha
                    var row = checkbox.closest('tr');
                    var updatedAtCell = row.find('td').eq(4);
                    var completedAtCell = row.find('td').eq(5);
                    updatedAtCell.text(data.updatedAt ? data.updatedAt : '-');
                    completedAtCell.text(data.completedAt ? data.completedAt : '-');
                },
                error: function () {
                    alert('Error updating task.');
                    checkbox.prop('checked', !checkbox.prop('checked'));
                },
                complete: function () {
                    checkbox.prop('disabled', false);
                }
            });
        });
    });
</script>

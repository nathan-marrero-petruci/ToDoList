@model IEnumerable<ToDoList.Models.Task>
@{
    ViewData["Title"] = "Tasks";
}
<h1>My Tasks</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<p>
    <a class="btn btn-primary" asp-action="Create">New Task</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th class="text-center">Completed?</th>
            <th>Created at</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td class="text-center align-middle">
                <input type="checkbox" class="toggle-complete" data-id="@item.Id" @(item.IsCompleted ? "checked" : "") style="transform: scale(1.3); cursor:pointer;" />
            </td>
            <td>@item.CreatedAt.AddHours(-3).ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }

    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $('.toggle-complete').change(function () {
            var checkbox = $(this);
            var id = checkbox.data('id');
            checkbox.prop('disabled', true);
            $.ajax({
                url: '/Tasks/ToggleComplete/' + id,
                type: 'POST',
                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                success: function (data) {
                    checkbox.prop('checked', data.isCompleted);
                },
                error: function () {
                    alert('Error updating task.');
                    checkbox.prop('checked', !checkbox.prop('checked'));
                },
                complete: function () {
                    checkbox.prop('disabled', false);
                }
            });
        });
    });
</script>

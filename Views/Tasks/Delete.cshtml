@model ToDoList.Models.Task
@{
    ViewData["Title"] = "Excluir Tarefa";
}
<h1>Excluir Tarefa</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="alert alert-danger">
    <strong>Tem certeza que deseja excluir esta tarefa?</strong>
</div>
<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Concluída?</dt>
    <dd class="col-sm-10">@(Model.IsCompleted ? "Sim" : "Não")</dd>
    <dt class="col-sm-2">Criada em</dt>
    <dd class="col-sm-10">@Model.CreatedAt.AddHours(-3).ToString("dd/MM/yyyy HH:mm:ss")</dd>
    <dt class="col-sm-2">Concluída em</dt>
    <dd class="col-sm-10">@(Model.CompletedAt.HasValue ? Model.CompletedAt.Value.AddHours(-3).ToString("dd/MM/yyyy HH:mm:ss") : "-")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
